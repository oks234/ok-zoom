doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet" href="https://unpkg.com/mvp.css")
    title ok-zoom 
  body
    header
      h1 ok-zoom
    main
      div#welcome
        form
          input(type="text" name="" placeholder="room name" required)
          button(type="submit") enter room
        h4 Open Rooms:
        ul
      div#room
        h3
        ul
        form#nickname
          input(type="text" name="" placeholder="nickname" required)
          button(type="submit") save nickname
        form#message
          input(type="text" name="" placeholder="message" required)
          button(type="submit") send message
    script(src="/socket.io/socket.io.js")
    script(src="/public/js/app.js")
